<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Employee Qualifications</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee Qualifications</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form enctype="multipart/form-data" id="qualificationsForm" action="/employee/employee-details/{{empId}}/create-qualification" method="post">
                            <div class="form-group">
                                <label for="textEduLevel">Education Level</label>
                                <input type="text" name="educationlevel" id="textEduLevel" class="form-control"
                                    placeholder="Education Level">
                            </div>
                            <div class="form-group">
                                <label for="textInstitution">School/College/University</label>
                                <input type="text" name="institution" id="textInstitution" class="form-control"
                                    placeholder="">
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="dateEducationFrom">From</label>
                                        <input class="form-control" type="date" name="educationfrom"
                                            id="dateEducationFrom">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="dateEducationFrom">To</label>
                                        <input class="form-control" type="date" name="educationto" id="dateEducationTo">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="textEduDesc">Description</label>
                                <textarea class="form-control" name="educationdescription" id="textEduDesc" rows="4"></textarea>
                            </div>
                               <div class="form-group">
                                <label for="fileEducation">Document</label>
                                <input type="file" class="form-control" name="educationdocument" id="fileEducatiom">
                            </div>
                            <div class="form-group d-flex justify-content-end">
                                <input type="submit" value="Submit" class="btn btn-primary" id="btnSubmitEducation">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <h5>Education Qualifications</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tableEducation" class="table">
                            <thead>
                                <tr>
                                    <th>Sl.No.</th>
                                    <th>Education Level</th>
                                    <th>Period</th>
                                    <th>School/College/University</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each qualifications}}
                                    <tr>
                                    {{#with this}}
                                        <td>{{serial}}</td>
                                        <td>{{educationlevel}}</td>
                                        <td>{{educationfrom}} - {{educationto}}</td>
                                        <td>{{institution}}</td>
                                        <td>{{educationdescription}}</td>
                                    {{/with}}
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>