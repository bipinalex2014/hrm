<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Employee Salary Slip</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employees</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

</div>
<section class="container">
    <div class="card">
        <div class="card-body">
            {{#each data}}
            {{!-- <form action="/employee/salary-slip-data/{{this._id}}" method="POST"> --}}
            <form id="salarySlipForm">
                <div class="row" style="margin:10px;padding:10px">  

                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Name</label>
                        <input type="text" name="name" value="{{this.firstname}} {{this.lastname}}" class="form-control"
                            id="">
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Employee Id</label>
                        <input type="text" name="employeeid" value="{{this.employeeid}}" class="form-control" id="">
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Date Of Joining</label>
                        <input type="text" name="dateOfJoining" value="{{this.dateofjoin}}" class="form-control" id="">
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Grade</label>
                        <input type="text" name="grade" value="{{this.department}}" class="form-control" id="">
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Location</label>
                        <input type="text" name="location" value="{{this.city}} , {{this.place}}" class="form-control"
                            id="">
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Basic Salary</label>
                        <input type="number" name="basicSalary" value="{{this.basicsalary}}" class="form-control" id="">
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Conveyance Allowance</label>
                        <input type="number" name="convayanceAllowance" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Leave Travel Allowance</label>
                        <input type="number" name="leaveTravelAllowance" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">House Rent Allowance</label>
                        <input type="number" name="houseRentAllowance" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Additional HRA</label>
                        <input type="number" name="additionalhra" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Medical Allowance</label>
                        <input type="number" name="medicalAllowance" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Transport Allowance</label>
                        <input type="number" name="transportAllowance" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Super Annuation Allowance</label>
                        <input type="number" name="superAnnuationAllowance" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Lunch Allowance</label>
                        <input type="number" name="lunchAllowance" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Total Earnings</label>
                        <input type="number" name="totalEarnings" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Provident Fund</label>
                        <input type="number" name="providentFund" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Total Deduction</label>
                        <input type="number" name="totalDeduction" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <label for="" class="my-2">Loan Deduction</label>
                        <input type="number" name="loanDeduction" class="form-control" id="" required>
                    </div>
                    <div class="col-sm-4 my-2">
                        <button type="submit" class="btn btn-success" onclick="salarySlipForm('{{this._id}}')">Save</button>
                    </div>

                </div>
            </form>
            {{/each}}
        </div>
    </div>

</section>