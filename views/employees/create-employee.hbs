<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Create Employee Profile</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create employee</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<section class="section">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Personal details</h4>
        </div>

        <div class="card-body">
            <form action="" method="post" id="formCreateEmployee">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textFirstName">First name</label>
                            <input type="text" name="firstname" id="textFirstName" placeholder="First name"
                                class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textFirstName">Last name</label>
                            <input type="text" name="lastname" id="textLastName" placeholder="Last name"
                                class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textEmployeId">Employee Id</label>
                            <input type="text" name="employeeid" id="textEmployeeId" placeholder="Employee id"
                                class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textDateOfJoin">Date of Join</label>
                            <small class="text-muted">eg.<i>dd-mm-yyyy</i></small>
                            <input type="date" class="form-control" name="dateofjoin" id="textDateOfJoin">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectGender">Gender</label>
                            <select name="gender" id="selectGender" class="form-select">
                                <option value="">-</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textDateOfBirth">Date of Birth</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="date" name="dateofbirth" id="textDateOfBirth" class="form-control"
                                placeholder="Date of birth">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectDepartment">Department</label>
                            <select class="form-select" name="department" id="selectDepartment">
                                <option value="">-</option>
                                {{#each departments}}
                                <option value="{{this._id}}">{{this.department}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectDesignation">Designation</label>
                            <select name="designation" id="selectDesignation" class="form-select">
                                <option value="">-</option>
                                {{#each designations}}
                                <option value="{{this._id}}">{{this.designation}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectRole">Role</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <select class="form-select" name="role" id="selectRole">
                                <option value="">-</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectHeadDesignation">Head designation</label>
                            <select class="form-select" name="headdesignation" id="selectHeadDesignation">
                                <option value="">-</option>
                                {{#each designations}}
                                <option value="{{this._id}}">{{this.designation}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textBasicSalary">Basic salary</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="text" name="basicsalary" id="textBasicSalary" class="form-control"
                                placeholder="Basic salary">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textOtRate">OT Rate</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="text" name="otrate" id="textOtRate" class="form-control"
                                placeholder="Overtime rate (Per hour)">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textAddress">Address</label>
                            <input type="text" name="address" id="textAddress" class="form-control"
                                placeholder="Addrss">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textPlace">Place</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="text" name="place" id="textplace" class="form-control" placeholder="Place">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textCity">City</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="text" name="city" id="textCity" class="form-control" placeholder="City">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textState">State</label>
                            <input type="text" name="state" id="textState" class="form-control" placeholder="State">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textProvince">Province</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="text" name="province" id="textProvince" class="form-control"
                                placeholder="Province">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textCountry">Country</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="text" name="country" id="textCountry" class="form-control"
                                placeholder="Country">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textPhone">Phone</label>
                            <input type="text" name="phone" id="textPhone" class="form-control"
                                placeholder="Mobile number">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textEmail">Email ID</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="text" name="email" id="textEmail" class="form-control"
                                placeholder="Email Address">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textBloodGroup">Blood group</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="text" name="bloodgroup" id="textBloodGroup" class="form-control"
                                placeholder="Blood group">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textUsername">Username</label>
                            <input type="text" name="username" id="textUsername" class="form-control"
                                placeholder="New username">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textPassword">Password</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="password" name="password" id="textPassword" class="form-control"
                                placeholder="Password">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="textConfirmPassword">Confirm password</label>
                            {{!-- <p class="form-control-static" id="staticInput">email@mazer.com</p> --}}
                            <input type="password" name="confirmpassword" id="textConfirmPassword" class="form-control"
                                placeholder="Confirm password">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectMaritialStatus">Maritial Status</label>
                            <select name="maritialstatus" id="selectMaritialStatus" class="form-select">
                                <option value="">-</option>
                                <option value="Single">Single</option>
                                <option value="Married">Married</option>
                                <option value="Divorced">Divorced</option>
                                <option value="Separated">Separated</option>
                                <option value="Widowed">Widowed</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2">
                        <button type="submit" class="btn btn-primary"> Submit</button>
                    </div>
                </div>
            </form>


        </div>

        </form>
    </div>
</section>