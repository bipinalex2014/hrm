<section class="container">
    <div class="row mb-3" style="display:flex;flex-direction: row-reverse">        
        <a href="/attendance/leave-rejection-details" class="btn btn-success" style="width: 150px;">Rejected details</a>
        <a href="/attendance/leave-approval-details" class="btn btn-success mx-2" style="width: 150px;">Approval details</a>
    </div>
    <div class="card" style="box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px 0px, rgba(0, 0, 0, 0.08) 0px 0px 0px 1px;">
        {{!-- <div class="card-header">
            <h3>Leave Requests</h3>
        </div> --}}
        <div class="card-body" id="cardBox">
            <div class="row">
                <div class="table-responsive mt-3">
                    <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Index</th>
                            <th scope="col">Name</th>
                            <th scope="col">Designation</th>
                            <th scope="col">Leave Type</th>
                            <th scope="col">Leave From</th>
                            <th scope="col">Leave To</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{this.index}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.designation}}</td>
                            <td>{{this.leavetype}}</td>
                            <td>{{this.from}}</td>
                            <td>{{this.to}}</td>
                            <td><a href="/attendance/leave-date-approved/{{this._id}}/{{this.empid}}">Approved</td>
                            <td><a href="/attendance/leave-date-rejected/{{this._id}}/{{this.empid}}">Rejected</td>
                            
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                </div>
                
            </div>


        </div>
        {{!-- </div> --}}
    </div>
</section>