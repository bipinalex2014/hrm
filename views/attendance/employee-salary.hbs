<a class="nav-link mb-3" href="#"><i class="fas fa-home"></i> Home</a>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h4>Employees salary details of current month</h4>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Admin</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

</div>

<section class="container">
    <div class="row mb-3" style="display:flex;flex-direction: row-reverse">
        <a href="/attendance/pdf-creator" class="btn btn-success mx-2" style="width: 150px;">Download pdf</a>
        <a href="/attendance/excel-creator" class="btn btn-success" style="width: 150px;">Download Excel</a>
    </div>
    
    <div class="card p-4" style="box-shadow: rgba(0, 0, 0, 0.05) 0px 6px 24px 0px, rgba(0, 0, 0, 0.08) 0px 0px 0px 1px;">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    {{!-- <th scope="col">#</th> --}}
                    <th style="padding: 15px;" scope="col">Index</th>
                    <th style="padding: 20px;" scope="col">Name</th>
                    <th style="padding: 20px;" scope="col">Basic Salary</th>
                    <th style="padding: 20px;" scope="col">Total Working Days</th>
                    <th style="padding: 20px;" scope="col">Total Attendance</th>
                    
                    <th scope="col">Salary/day</th>
                    <th scope="col">Total Salary</th>
                    
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    {{!-- <th scope="row">1</th> --}}
                    <td style="padding: 20px;">{{this.index}}</td>
                    <td style="padding: 20px;">{{this.name}}</td>
                    <td style="padding: 20px;">{{this.basicSalary}}</td>
                    <td style="padding: 20px;">{{this.totalDays}}</td>
                    <td style="padding: 20px;">{{this.total}}</td>
                    
                    <td style="padding: 20px;">{{this.perDay}}</td>
                    <td style="padding: 20px;">{{this.salary}}</td>
                    {{!-- <td>{{this.startTime}}</td>
                    <td>{{this.endTime}}</td> --}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{!-- <div class="row">
        
    </div> --}}
    <div class="row justify-content-end mt-5">
        <div class="col-lg-5"  style="display:flex;flex-direction: row-reverse">
            
            <h4>Total Salary Spent : {{data.totalSalary}}</h4>
        </div>
        
    </div>

</section>