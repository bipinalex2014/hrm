<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h4>Leave Approved Details</h4>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Admin</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

</div>


<section class="container">
    <div class="card p-2">
        
        <div class="card-body" id="cardBox">
            <div class="row">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="padding: 15px;" scope="col">Index</th>
                            <th scope="col">Name</th>
                            <th scope="col">Designation</th>
                            <th scope="col">Leave Type</th>
                            <th scope="col">Leave From</th>
                            <th scope="col">Leave To</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td style="padding: 20px;">{{this.index}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.designation}}</td>
                            <td>{{this.leavetype}}</td>
                            <td>{{this.from}}</td>
                            <td>{{this.to}}</td>
                            <td><a class="btn btn-success">Approved</a></td>
                            {{!-- <td><a href="/attendance/leave-date-rejected/{{this._id}}/{{this.empid}}">Rejected</td> --}}
                            
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>


        </div>
        {{!-- </div> --}}
    </div>
</section>