<div class="container">

    <div class="card">
        <div class="card-header">
            <h3>Duty Shift</h3>
        </div>
        <div class="card-body">
            <form action="/attendance/duty-shift-data" id="dutyShiftForm" method="POST">
                <div class="row">
                    <div class="col-sm-3">
                        <label for="">Shift Name</label>
                        <input type="text" name="dutyName" class="form-control" required>
                    </div>
                    {{!-- <div class="col-sm-3">
                        <label for="">Date</label>
                        <input type="date" name="date" class="form-control">
                    </div> --}}
                    <div class="col-sm-3">
                        <label for="">Start Time</label>
                        <input type="time" name="startTime" class="form-control" required>
                    </div>
                    <div class="col-sm-3">
                        <label for="">End Time</label>
                        <input type="time" name="endTime" class="form-control" required>
                    </div>
                    {{!-- <div class="col-sm-3">
                        <label for="">duty shift</label>
                        <input type="text" class="form-control">
                    </div> --}}
                </div>
                <div class="row">
                    <div class="col-sm-2 my-3">
                        <button class="btn btn-primary">Save</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Duty Name</th>
                {{!-- <th scope="col">date</th> --}}
                <th scope="col">Start Time</th>
                <th scope="col">End Time</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <th scope="row">1</th>
                <td>{{this.dutyName}}</td>
                {{!-- <td>{{this.date}}</td> --}}
                <td>{{this.startTime}}</td>
                <td>{{this.endTime}}</td>
                <td><a class="btn btn-danger" href="/attendance/delete-shift/{{_id}}">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>